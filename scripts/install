#!/bin/bash
# Install the latest vsix extension

set -e

cd "$(dirname "$0")/.."

# Find the latest vsix file by version number
latest=$(ls -1 pks-vscode-*.vsix 2>/dev/null | sort -V | tail -1)

if [ -z "$latest" ]; then
  echo "No vsix file found. Run 'npx vsce package --no-yarn' first."
  exit 1
fi

echo "Installing $latest..."
code --install-extension "$latest"
echo "Done. Reload VS Code to use the new version."
